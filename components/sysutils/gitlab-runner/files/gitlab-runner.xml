<service_bundle type="manifest" name="gitlab-runner">

  <service name="application/gitlab-runner" type="service" version="1">

    <dependency name="network" grouping="require_all" restart_on="error" type="service">
      <service_fmri value="svc:/milestone/network:default"/>
    </dependency>

    <dependency name="filesystem-local" grouping="require_all" restart_on="none" type="service">
      <service_fmri value="svc:/system/filesystem/local:default"/>
    </dependency>

			<exec_method type="method" name="start" exec="/usr/bin/gitlab-runner run -c %{options/config} -d %{options/workdir} --syslog &amp; " timeout_seconds="60">
      <method_context>
        <method_credential user='gitlab-runner' group='gitlab-runner' />
        <method_environment>
          <envvar name='LANG' value='C'/>
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method type='method' name='refresh' exec=':kill -HUP' timeout_seconds='60'/>

    <exec_method type="method" name="stop" exec=":kill -SIGQUIT" timeout_seconds="3600"/>

    <property_group name="startd" type="framework">
      <propval name="ignore_error" type="astring" value="core,signal"/>
    </property_group>

    <property_group name='options' type='application'>
			 <propval name='config'  type='astring' value='/etc/gitlab-runner/config.toml' />
			 <propval name='workdir' type='astring' value='/var/lib/gitlab-runner' />
	  </property_group>

    <instance name="default" enabled="true"/>

    <stability value="Evolving"/>

  </service>

</service_bundle>
