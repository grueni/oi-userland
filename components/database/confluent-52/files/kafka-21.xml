<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='Kafka 2.1.0'>
  <service name='database/kafka-21' type='service' version='1'>
	  <create_default_instance enabled='true'/>
    <single_instance/>
		<dependency
			 name='multi-user-server'
			 grouping='optional_all'
			 type='service'
			 restart_on='none'>
			 <service_fmri value='svc:/milestone/multi-user-server' />
		</dependency>
		<dependency name='network' grouping='require_all' restart_on='error' type='service'>
			<service_fmri value='svc:/milestone/network:default'/>
		</dependency>
		<dependency name='filesystem-local' grouping='require_all' restart_on='none' type='service'>
			<service_fmri value='svc:/system/filesystem/local:default'/>
		</dependency>
		<dependency name='autofs' grouping='optional_all' restart_on='error' type='service'>
			<service_fmri value='svc:/system/filesystem/autofs:default'/>
		</dependency>
		<method_context>
			<method_credential user="webservd" />
      <method_environment>
        <envvar name="LOG_DIR" value="/tmp" />
      </method_environment>
		</method_context>
		<exec_method name='start' type='method' exec='/usr/kafka/2.1/bin/kafka-server-start.sh -daemon %{options/config}' timeout_seconds='30'/>
		<exec_method name='stop'  type='method' exec=':kill'  timeout_seconds='15'/>
		<property_group name='startd' type='framework'>
			 <propval name='ignore_error' type='astring' value='core,signal'/>
		</property_group>
    <property_group name='options' type='application'>
       <propval name='config' type='astring' value='/etc/kafka/2.1/server.properties' />
    </property_group>
		<stability value='Evolving'/>
		<template>
			 <common_name>
				 <loctext xml:lang='C'>Kafka</loctext>
			 </common_name>
			 <documentation>
				 <doc_link name='Kafka' uri='https://kafka.apache.org'/>
			 </documentation>
		</template>
  </service>
</service_bundle>

